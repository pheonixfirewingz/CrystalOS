{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to gdbserver",
            "executable": "${workspaceRoot}/Kernel/zig-out/bin/preMolton",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "setupCommands": [
                {
                    "description": "Interrupt the target",
                    "text": "-exec-interrupt",
                    "ignoreFailures": true
                },
                {
                    "description": "Set GDB to use the correct architecture",
                    "text": "set architecture i386:x86-64",
                    "ignoreFailures": true
                }
            ],
            "postAttachCommands": [
                {
                    "description": "Recheck and set architecture after attaching",
                    "text": "set architecture i386:x86-64",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}